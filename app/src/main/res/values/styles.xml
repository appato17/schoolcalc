<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ffb340</item>
        <item name="colorPrimaryDark">#1c1c1e</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonsPortrait" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">35sp</item>
        <item name="android:fontFamily">Helvetica</item>
    </style>

    <style name="ButtonsSignsPortrait" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_sign_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">Helvetica</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="ButtonsTopPortrait" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_top_background</item>
        <item name="android:fontFamily">Helvetica</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="Buttons" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_other_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">Helvetica</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="ButtonsSigns" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_sign_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">Helvetica</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="ButtonsTop" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_top_background</item>
        <item name="android:fontFamily">Helvetica</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="ButtonsNumber" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:fontFamily">Helvetica</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">3dp</item>
    </style>

</resources>
