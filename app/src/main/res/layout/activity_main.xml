<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:id="@+id/equationTextView1"
            android:text=""
            android:textSize="50dp"
            android:layout_weight="1"
            android:fontFamily="Helvetica"
            android:textColor="@android:color/white"/>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answerTextView1"
            android:layout_gravity="end|bottom"
            android:text=""
            android:textSize="50dp"
            android:textStyle="bold"
            android:fontFamily="Helvetica"
            android:textColor="@android:color/white"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:text="AC"
                android:onClick="clear"
                android:layout_margin="5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/ButtonsTopPortrait"
                android:layout_width="0dp" />

            <Button
                android:text="+/-"
                style="@style/ButtonsTopPortrait"
                android:layout_margin="5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="change_sign"
                android:layout_width="0dp" />

            <Button
                android:text="%"
                style="@style/ButtonsTopPortrait"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:onClick="symbol"
                android:layout_width="0dp" />

            <Button
                android:text="รท"
                style="@style/ButtonsSignsPortrait"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:onClick="symbol"
                android:layout_width="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:text="1"
                style="@style/ButtonsPortrait"
                android:layout_margin="5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="number"
                android:layout_width="0dp" />

            <Button
                android:text="2"
                style="@style/ButtonsPortrait"
                android:layout_margin="5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="number"
                android:layout_width="0dp" />

            <Button
                android:text="3"
                style="@style/ButtonsPortrait"
                android:layout_margin="5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="number"
                android:layout_width="0dp" />

            <Button
                android:text="ร"
                style="@style/ButtonsSignsPortrait"
                android:layout_margin="5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="symbol"
                android:layout_width="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:text="4"
                style="@style/ButtonsPortrait"
                android:layout_margin="5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="number"
                android:layout_width="0dp" />

            <Button
                android:text="5"
                style="@style/ButtonsPortrait"
                android:layout_margin="5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="number"
                android:layout_width="0dp" />

            <Button
                android:text="6"
                style="@style/ButtonsPortrait"
                android:layout_margin="5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="number"
                android:layout_width="0dp" />

            <Button
                android:text="-"
                style="@style/ButtonsSignsPortrait"
                android:layout_margin="5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="symbol"
                android:layout_width="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:text="7"
                style="@style/ButtonsPortrait"
                android:layout_margin="5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="number"
                android:layout_width="0dp" />

            <Button
                android:text="8"
                style="@style/ButtonsPortrait"
                android:layout_margin="5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="number"
                android:layout_width="0dp" />

            <Button
                android:text="9"
                style="@style/ButtonsPortrait"
                android:layout_margin="5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="number"
                android:layout_width="0dp" />

            <Button
                android:text="+"
                style="@style/ButtonsSignsPortrait"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:text="0"
                    style="@style/ButtonsPortrait"
                    android:layout_margin="5dp"
                    android:paddingLeft="37dp"
                    android:layout_height="match_parent"
                    android:onClick="number"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical|start"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:text="."
                    style="@style/ButtonsPortrait"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:onClick="symbol"
                    android:layout_width="0dp" />

                <Button
                    android:text="="
                    style="@style/ButtonsSignsPortrait"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:onClick="equals"
                    android:layout_width="0dp" />

            </LinearLayout>






        </LinearLayout>

    </LinearLayout>

</LinearLayout>